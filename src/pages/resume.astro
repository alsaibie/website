---
import { RESUME } from "@consts";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import ResumeHeader from "@components/resume/ResumeHeader.astro";
import EducationSection from "@components/resume/EducationSection.astro";
import AcademicExperienceSection from "@components/resume/AcademicExperienceSection.astro";
import LinkedInExperienceSection from "@components/resume/IndustryExperienceSection.astro";
import PublicationsSection from "@components/resume/PublicationsSection.astro";
import CoursesSection from "@components/resume/CoursesSection.astro";
import SkillsSection from "@components/resume/SkillsSection.astro";
import SocialIcons from "@components/SocialIcons.astro";
// import AwardsSection from "@components/resume/AwardsSection.astro";
import { 
  avatarData,
  education, 
  academicExperience, 
  industryExperience, 
  publications,
  courses, 
  skillCategories, 
  awards 
} from "@data/resumeData";
---

<Layout title={RESUME.TITLE} description={RESUME.DESCRIPTION}>
  <Container>
    <div class="animate">
      <ResumeHeader title="" avatar={avatarData} language="en" />
      
      <div class="space-y-8">
        <EducationSection education={education} />
        
        <AcademicExperienceSection 
          title="Academic Experience" 
          experiences={academicExperience} 
          borderColor="blue-500/50" 
        />
        
        <LinkedInExperienceSection 
          title="Industry Experience" 
          experiences={industryExperience} 
          borderColor="green-500/50" 
        />
        
        <PublicationsSection categories={publications} language="en" />
        
        <CoursesSection courses={courses} language="en" />
        
        <SkillsSection skillCategories={skillCategories} language="en" />
        
        <!-- Social Icons -->
        <section class="animate">
          <SocialIcons class="mt-8" />
        </section>
        
        <!-- <AwardsSection awards={awards} /> -->
      </div>
    </div>
  </Container>
</Layout>

<style>
  @media print {
    .animate {
      transform: none !important;
      opacity: 1 !important;
    }
    
    button {
      display: none !important;
    }
    
    section {
      break-inside: avoid;
    }
    
    h2, h3 {
      break-after: avoid;
    }
    
    /* Avatar print styles */
    img {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
    
    /* Ensure avatar section doesn't break */
    .avatar-section {
      break-inside: avoid;
    }
  }
</style>
