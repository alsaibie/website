---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagefind from "@components/PageFind.astro";
import { SITE } from "@consts";
import { getTranslation } from "@data/i18n";

type Props = {
  title: string;
  description: string;
  language?: string;
  image?: string;
};

const { title, description, language = 'en', image } = Astro.props;
const isRtl = language === 'ar';
const currentLocale = Astro.currentLocale || language;
const t = getTranslation(currentLocale);
---

<!doctype html>
<html lang={language} dir={isRtl ? 'rtl' : 'ltr'} class={isRtl ? 'rtl' : ''}>
  <head>
    <Head title={`${title} | ${t.siteTitle}`} description={description} image={image} />
  </head>
  <body>
    <noscript>
      <style>
        .animate{
          opacity:1;
          translate: var(--tw-translate-x) calc(var(--spacing) * 0);
        }
      </style>
    </noscript>
    <Header language={language} />
    <main>
      <slot />
    </main>
    <Footer />
    <Pagefind />
  </body>
</html>
