---
export interface Props {
  title: string;
  description?: string;
  url?: string;
  class?: string;
}

const { title, description = "", url, class: className = "" } = Astro.props;

// Get the current URL if not provided
const currentUrl = url || Astro.url.href;
const encodedUrl = encodeURIComponent(currentUrl);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);

// Social sharing URLs
const twitterUrl = `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
const emailUrl = `mailto:?subject=${encodedTitle}&body=${encodedDescription}%0A%0A${encodedUrl}`;

// Copy to clipboard functionality will be handled by JavaScript
---

<div class={`share-buttons flex items-center gap-3 ${className}`}>
  <span class="text-sm font-medium text-black/70 dark:text-white/70">Share:</span>
  
  <!-- Twitter -->
  <a
    href={twitterUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center justify-center w-8 h-8 rounded-sm bg-black/5 hover:bg-black/10 dark:bg-white/10 dark:hover:bg-white/15 transition-colors duration-200"
    title="Share on Twitter"
  >
    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>

  <!-- LinkedIn -->
  <a
    href={linkedinUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center justify-center w-8 h-8 rounded-sm bg-black/5 hover:bg-black/10 dark:bg-white/10 dark:hover:bg-white/15 transition-colors duration-200"
    title="Share on LinkedIn"
  >
    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
  </a>

  <!-- Facebook -->
  <a
    href={facebookUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center justify-center w-8 h-8 rounded-sm bg-black/5 hover:bg-black/10 dark:bg-white/10 dark:hover:bg-white/15 transition-colors duration-200"
    title="Share on Facebook"
  >
    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
  </a>

  <!-- Email -->
  <a
    href={emailUrl}
    class="flex items-center justify-center w-8 h-8 rounded-sm bg-black/5 hover:bg-black/10 dark:bg-white/10 dark:hover:bg-white/15 transition-colors duration-200"
    title="Share via Email"
  >
    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
    </svg>
  </a>

  <!-- Copy Link -->
  <button
    class="copy-link-btn share-copy-btn flex items-center justify-center w-8 h-8 rounded-sm bg-black/5 hover:bg-black/10 dark:bg-white/10 dark:hover:bg-white/15 transition-colors duration-200"
    title="Copy Link"
    data-url={currentUrl}
    data-title={title}
  >
    <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
      <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
    </svg>
  </button>
</div>

<script>
  function initShareButtons() {
    const copyButtons = document.querySelectorAll('.share-copy-btn');
    
    copyButtons.forEach(button => {
      // Remove existing listeners to prevent duplicates
      button.removeEventListener('click', handleCopyClick);
      button.addEventListener('click', handleCopyClick);
    });
  }
  
  async function handleCopyClick(event: Event) {
    const button = event.currentTarget as HTMLButtonElement;
    const url = button.getAttribute('data-url');
    
    if (!url) {
      console.error('No URL found to copy');
      return;
    }
    
    try {
      if (navigator.clipboard && window.isSecureContext) {
        await navigator.clipboard.writeText(url);
      } else {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = url;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        textArea.style.top = '-999999px';
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        document.execCommand('copy');
        textArea.remove();
      }
      
      // Visual feedback
      const originalContent = button.innerHTML;
      button.innerHTML = `
        <svg class="w-4 h-4 fill-current text-green-600" viewBox="0 0 24 24">
          <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
        </svg>
      `;
      
      setTimeout(() => {
        button.innerHTML = originalContent;
      }, 2000);
      
    } catch (err) {
      console.error('Failed to copy link: ', err);
      
      // Show error feedback
      const originalContent = button.innerHTML;
      button.innerHTML = `
        <svg class="w-4 h-4 fill-current text-red-600" viewBox="0 0 24 24">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
      `;
      
      setTimeout(() => {
        button.innerHTML = originalContent;
      }, 2000);
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initShareButtons);
  
  // Re-initialize after Astro page transitions
  document.addEventListener('astro:after-swap', initShareButtons);
</script>

<style>
  .copy-link-btn {
    cursor: pointer;
  }
  
  .copy-link-btn:hover {
    transform: scale(1.05);
  }
</style>
