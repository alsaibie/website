---
import { getTranslation } from "../../data/i18n";

export interface EducationItem {
  degree: string;
  field: string;
  institution: string;
  year: string;
  details?: string;
  advisor?: string;
  thesisUrl?: string;
  gpa?: string;
}

export interface Props {
  education: EducationItem[];
  language?: string;
}

const { education, language = "en" } = Astro.props;
const t = getTranslation(language);
---

<section class="animate space-y-4">
  <h2 class="text-2xl font-bold text-black dark:text-white border-b border-black/10 dark:border-white/20 pb-2">
    {t.education}
  </h2>
  <div class="space-y-6">
    {education.map((item) => (
      <div class={language === 'ar' ? "border-r-4 border-black/20 dark:border-white/30 pr-4" : "border-l-4 border-black/20 dark:border-white/30 pl-4"}>
        <h3 class="text-lg font-semibold">
          {language === 'ar' ? `${item.degree} في ${item.field}` : `${item.degree} in ${item.field}`}
        </h3>
        <p class="text-black/70 dark:text-white/70">{item.institution} • {item.year}</p>
        {item.details && (
          <p class="mt-2 text-sm flex items-center gap-2">
            <span>{item.details}</span>
            {item.thesisUrl && (
              <a 
                href={item.thesisUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors inline-flex items-center"
                aria-label="Open thesis link"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            )}
          </p>
        )}
        {item.advisor && <p class="text-sm text-black/60 dark:text-white/60">{t.advisor}: {item.advisor}</p>}
        {item.gpa && <p class="mt-2 text-sm">{item.gpa}</p>}
      </div>
    ))}
  </div>
</section>
