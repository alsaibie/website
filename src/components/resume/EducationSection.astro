---
export interface EducationItem {
  degree: string;
  field: string;
  institution: string;
  year: string;
  details?: string;
  advisor?: string;
  gpa?: string;
}

export interface Props {
  education: EducationItem[];
  language?: string;
}

const { education, language = "en" } = Astro.props;
---

<section class="animate space-y-4">
  <h2 class="text-2xl font-bold text-black dark:text-white border-b border-black/10 dark:border-white/20 pb-2">
    Education
  </h2>
  <div class="space-y-6">
    {education.map((item) => (
      <div class={language === 'ar' ? "border-r-4 border-black/20 dark:border-white/30 pr-4" : "border-l-4 border-black/20 dark:border-white/30 pl-4"}>
        <h3 class="text-lg font-semibold">
          {language === 'ar' ? `${item.degree} في ${item.field}` : `${item.degree} in ${item.field}`}
        </h3>
        <p class="text-black/70 dark:text-white/70">{item.institution} • {item.year}</p>
        {item.details && <p class="mt-2 text-sm">{item.details}</p>}
        {item.advisor && <p class="text-sm text-black/60 dark:text-white/60">Advisor: {item.advisor}</p>}
        {item.gpa && <p class="mt-2 text-sm">{item.gpa}</p>}
      </div>
    ))}
  </div>
</section>
