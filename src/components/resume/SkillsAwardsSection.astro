---
export interface SkillCategory {
  name: string;
  skills: string[];
  color: string;
}

export interface Props {
  skillCategories: SkillCategory[];
  awards: string[];
}

const { skillCategories, awards } = Astro.props;
---

<section class="animate space-y-4">
  <h2 class="text-2xl font-bold text-black dark:text-white border-b border-black/10 dark:border-white/20 pb-2">
    Skills & Awards
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h3 class="text-lg font-semibold mb-3">Technical Skills</h3>
      <div class="space-y-3">
        {skillCategories.map((category) => (
          <div>
            <h4 class="text-sm font-medium mb-2 text-black/70 dark:text-white/70">{category.name}</h4>
            <div class="flex flex-wrap gap-2">
              {category.skills.map((skill) => (
                <span class={`bg-${category.color}-100 dark:bg-${category.color}-900/30 text-${category.color}-800 dark:text-${category.color}-200 px-3 py-1 rounded-full text-sm`}>
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div>
      <h3 class="text-lg font-semibold mb-3">Awards & Honors</h3>
      <ul class="space-y-2 text-sm">
        {awards.map((award) => (
          <li>â€¢ {award}</li>
        ))}
      </ul>
    </div>
  </div>
</section>
